#include <bits/stdc++.h>
using namespace std;

string ltrim(const string &);
string rtrim(const string &);

// Function to calculate total string similarity using Z-algorithm
long long stringSimilarity(string s) {
    int n = s.length();
    vector<int> z(n, 0);
    int l = 0, r = 0;
    long long total = n; // Similarity with itself

    for (int i = 1; i < n; i++) {
        if (i <= r)
            z[i] = min(r - i + 1, z[i - l]);
        while (i + z[i] < n && s[z[i]] == s[i + z[i]])
            z[i]++;
        if (i + z[i] - 1 > r) {
            l = i;
            r = i + z[i] - 1;
        }
        total += z[i];
    }
    return total;
}

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--) {
        string s;
        cin >> s;
        cout << stringSimilarity(s) << "\n";
    }

    return 0;
}
